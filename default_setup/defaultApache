<VirtualHost *:80>
        ServerAdmin webmaster@localhost
        DocumentRoot /home/snow/nobiility
        ErrorLog ${APACHE_LOG_DIR}/error.log
        CustomLog ${APACHE_LOG_DIR}/access.log combined

        Alias /static /home/snow/nobility/static
        <Directory /home/snow/nobility/static>
                Require all granted
        </Directory>

        Alias /media /home/snow/nobility/media
        <Directory /home/snow/nobility/media>
                Require all granted
        </Directory>

        <Directory /home/snow/nobility/royal>
                <Files wsgi.py>
                        Require all granted
                </Files>
        </Directory>

        WSGIScriptAlias / /home/snow/nobility/royal/wsgi.py
        WSGIDaemonProcess royal python-path=/home/snow/nobility python-home=/home/snow/nobility/venv
        WSGIProcessGroup royal
</VirtualHost>